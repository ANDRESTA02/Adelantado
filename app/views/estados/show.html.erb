<%- model_class = Estado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:permisos_de_salida) %>:</strong></dt>
  <dd><%= @estado.permisos_de_salida %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disponible) %>:</strong></dt>
  <dd><%= @estado.disponible %></dd>
  <dt><strong><%= model_class.human_attribute_name(:malo) %>:</strong></dt>
  <dd><%= @estado.malo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reparacion) %>:</strong></dt>
  <dd><%= @estado.reparacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reservado) %>:</strong></dt>
  <dd><%= @estado.reservado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @estado.descripcion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              estados_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_estado_path(@estado), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              estado_path(@estado),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

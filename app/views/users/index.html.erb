
<div class="panel panel-default col-md-14">
  
  <div class="panel-heading ">
    <h1>Lista de Usuarios</h1>
  </div>

  <table class="table table-striped table-bordered">
    <thead class=" btn-success">
      <tr>
        <th>Nombre Completo</th>
        <th>Telefono</th>
        <th>Celular</th>
        <th>Direccion</th>
        <th>Email</th>
  <!--  <th>Crypted password</th> 
        <th>Salt</th>    -->

        <th>Funciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %> 
        <tr>
          <td><%= user.nombre %></td>
          <td><%= user.telefono %></td>
          <td><%= user.celular %></td>
          <th><%= user.dir %></th>
          <td><%= user.email %></td>
  <!--    <td><%= user.crypted_password %></td>   
          <td><%= user.salt %></td>  -->
          <td><%= link_to '', user, :class => ' fa-share-square fa-2x' %>
              
              <%= link_to '',edit_user_path(user), :class => 'fa fa-edit fa-2x' %>
              <%= link_to '', user, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'fa fa-trash-o fa-2x'%> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Nuevo Usuario', new_user_path, :class => 'btn btn-primary' %>

<%- model_class = Elemento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:identificacion) %>:</strong></dt>
  <dd><%= @elemento.identificacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @elemento.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo_interno) %>:</strong></dt>
  <dd><%= @elemento.codigo_interno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo_contable) %>:</strong></dt>
  <dd><%= @elemento.codigo_contable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @elemento.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_elemento_id) %>:</strong></dt>
  <dd><%= @elemento.tipo_elemento_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              elementos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_elemento_path(@elemento), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              elemento_path(@elemento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

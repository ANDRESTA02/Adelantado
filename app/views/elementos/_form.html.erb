<%= simple_form_for @elemento, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= f.input :codigo_interno %>
  <%= f.input :codigo_contable %>
  <%= f.input :descripcion %>
 <%= f.collection_select :tipo_elemento_id, TipoElemento.all, :id, :nombre, prompt: "Seleccione Tipo de Elemento", required: true %>
  <%= f.collection_select :estado_id, Estado.all, :id, :nombre, prompt: "Seleccione Estado" %>

  <div class="form-actions">
    <%= f.button :submit, "Crear Elemento", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.Cancelar")),
                elementos_path, :class => 'btn' %>
  </div>
<% end %>
